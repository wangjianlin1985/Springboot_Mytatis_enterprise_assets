<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jtj.web.dao.PointDao">

    <insert id="add">
        INSERT INTO point(name, pid, `order`)
        VALUES (#{name},#{pid},#{order})
    </insert>

    <update id="update">
        UPDATE point
        <set>
            <if test=" name != '' and name != null ">
                name = #{name},
            </if>
            <if test="pid != null">
                pid = #{pid},
            </if>
            <if test="order != null">
                `order` = #{order},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM point WHERE id IN
        <foreach collection="ids" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <sql id="permissionConditions">
        <if test="id != null">
            AND ${alias}.id = #{id}
        </if>
        <if test="name != null and name != ''">
            AND ${alias}.name = #{name}
        </if>
        <if test="pid != null">
            AND ${alias}.pid = #{pid}
        </if>
        <if test="order != null">
            AND ${alias}.order = #{order}
        </if>
    </sql>

    <select id="getList" resultType="Point">
        SELECT
        p.*
        FROM point p
        <where>
            <include refid="permissionConditions">
                <property name="alias" value="p"/>
            </include>
        </where>
        ORDER BY p.pid ASC ,p.`order` ASC
        LIMIT #{begin},#{offset}
    </select>

    <select id="getNum" resultType="int">
        SELECT
        count(1)
        FROM point p
        <where>
            <include refid="permissionConditions">
                <property name="alias" value="p"/>
            </include>
        </where>
    </select>

    <select id="getMapByPid" resultType="KeyValue">
        SELECT
            p.id "key",
            p.name "value"
        FROM point p
        WHERE p.pid = #{pid}
        ORDER BY p.`order` ASC
    </select>

    <select id="getAllPoint" resultType="Point">
        SELECT p.* FROM point p
    </select>

</mapper>